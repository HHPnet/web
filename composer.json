{
    "name": "hhpnet/web",
    "description": "Website code for HHPnet",
    "require": {
        "php": ">=5.5",
        "hhpnet/core": "^1.0",
        "slim/slim": "^3.3",
        "twig/twig": "^1.24",
        "slim/twig-view": "^2.1"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.5"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "javiyt",
            "email": "me@javi.yt"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "HHPnet\\Web\\": "src/Controllers/",
            "spec\\HHPnet\\Core\\": "spec/"
        }
    },
    "scripts": {
        "test": "bin/phpspec run --format=pretty --verbose --ansi"
    },
    "config": {
        "bin-dir": "bin"
    }
